/* ====== BASSTILAR ====== */
body {
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    color: #2e2e2e;
    background-color: #f9f9f9;
}

h1, h2 {
    font-family: 'Playfair Display', serif;
    color: #2b6777;
    text-align: center;
    margin-top: 0;
}

a {
    color: #2b6777;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

